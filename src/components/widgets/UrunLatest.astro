---
import { getPermalink } from '~/utils/permalinks';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import { urlForOrNull } from '~/lib/sanity';

// index.astro'dan gelen 'urunler' verisini burada yakalıyoruz
const { urunler = [], title = "Platformdaki Yeni Ürünler" } = Astro.props;
---

<WidgetWrapper>
  <div class="mb-8 text-center">
    <h2 class="text-3xl font-bold tracking-tight sm:text-4xl font-heading">
      {title}
    </h2>
  </div>
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {urunler.map((urun) => (
      <article class="group">
        <a href={`/urunler/${urun.slug.current}`}>
          <div class="relative">
            {urun.mainImage && (
             <img
               src={urlForOrNull(urun.mainImage, 400, 250)}
               alt={urun.title}
               class="w-full h-64 object-cover rounded-lg shadow-md transition-transform duration-300 ease-in-out group-hover:scale-105"
             />
            )}
          </div>
          <div class="mt-4">
            <h3 class="text-xl font-bold mt-2 group-hover:text-primary transition-colors">
              {urun.title}
            </h3>
            <p class="mt-2 text-2xl font-extrabold text-gray-900 dark:text-slate-200">
              {urun.price} TL
            </p>
          </div>
        </a>
      </article>
    ))}
  </div>
  <div class="mt-12 text-center">
    <Button variant="primary" href="/urunler" text="Tüm Ürünleri Gör" />
  </div>
</WidgetWrapper>